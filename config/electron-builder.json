{
  "appId": "com.fribouz.panoramaviewer",
  "productName": "Advanced Panorama Viewer",
  "copyright": "Copyright Â© 2025 fribouz",
  "icon": "public/icons/panorama-viewer-icon-multi.ico",
  "directories": {
    "output": "dist"
  },
  "files": [
    {
      "from": "dist/desktop",
      "to": "desktop",
      "filter": ["**/*"]
    },
    "data/credential-config.json",
    "package.json",
    "!**/*.map",
    "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/.cache",
    "!node_modules/@next/swc-linux*/**",
    "!node_modules/@next/swc-linux*",
    "!node_modules/@next/swc-darwin*/**",
    "!node_modules/@next/swc-darwin*",
    "!node_modules/app-builder-bin/**/*",
    "!node_modules/**/test/**/*",
    "!node_modules/**/tests/**/*",
    "!node_modules/**/*.d.ts",
    "!node_modules/**/README*",
    "!node_modules/**/CHANGELOG*",
    "!node_modules/**/LICENSE*",
    "!node_modules/**/*.md",
    "!node_modules/**/docs/**/*",
    "!node_modules/**/example*/**/*",
    "!node_modules/**/demo*/**/*",
    "!node_modules/react-icons/!(fa)/**/*",
    "!node_modules/react-icons/*/!(index.js|index.d.ts)",
    "node_modules/react-icons/fa/**/*",
    "!**/locales/!(en-US.pak|en-GB.pak)",
    "!**/*.pak",
    "**/en-US.pak",
    "**/en-GB.pak",
    "**/resources.pak",
    "**/chrome_100_percent.pak",
    "**/chrome_200_percent.pak",
    "!scripts/python/**/*",
    "!scripts/utils/validate-credentials.js",
    "!scripts/build/verify-build-output.js",
    "!public/cars/**/*",
    "!docs/**/*",
    "!.github/**/*",
    "!.husky/**/*",
    "!jest.*",
    "!eslint.*",
    "!.prettier*",
    "!config/.lighthouserc.json",
    "!.lintstagedrc.json",
    "!config/.eslintrc.json",
    "!config/.prettierrc.json",
    "!config/.prettierignore",
    "!config/jest.config.js",
    "!config/eslint.config.mjs",
    "!config/postcss.config.mjs",
    "!config/tsconfig.json",
    "!next.config.js",
    "!instruction.md",
    "!readmeoverview.md",
    "!README.md",
    "!**/*.test.*",
    "!**/*.spec.*",
    "!**/__tests__/**/*",
    "!**/test/**/*",
    "!**/tests/**/*",
    "!tests/**/*",
    "!**/*.log",
    "!**/.env*",
    "!**/coverage/**/*",
    "!**/.nyc_output/**/*"
  ],
  "extraResources": [
    {
      "from": "resources/node",
      "to": "node",
      "filter": ["**/*"]
    },
    {
      "from": ".next/standalone",
      "to": "standalone",
      "filter": ["**/*", "!src/**/*"]
    },
    {
      "from": ".next/static",
      "to": "standalone/.next/static",
      "filter": ["**/*"]
    },
    {
      "from": "public/assets",
      "to": "assets",
      "filter": ["**/*", "!*-unsplash*.jpg"]
    },
    {
      "from": "public/icons",
      "to": "icons",
      "filter": [
        "panorama-viewer-icon.ico",
        "panorama-viewer-icon-multi.ico",
        "panorama-viewer-icon.png",
        "panorama-viewer-icon 16x16.ico",
        "panorama-viewer-icon 24x24.ico",
        "panorama-viewer-icon 32x32.ico",
        "panorama-viewer-icon 64x64.ico",
        "panorama-viewer-icon 128x128.ico",
        "panorama-viewer-icon 256x256.ico"
      ]
    },
    {
      "from": "scripts/node",
      "to": "scripts/node",
      "filter": ["**/*"]
    },
    {
      "from": "scripts/utils/production-server.js",
      "to": "scripts/utils/production-server.js"
    },
    {
      "from": "config/next.config.production.js",
      "to": "config/next.config.production.js"
    }
  ],
  "asar": {
    "smartUnpack": true
  },
  "compression": "maximum",
  "afterPack": "scripts/electron/after-pack.js",
  "win": {
    "target": "nsis",
    "signAndEditExecutable": false,
    "icon": "public/icons/panorama-viewer-icon-multi.ico",
    "requestedExecutionLevel": "requireAdministrator"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "installerIcon": "public/icons/panorama-viewer-icon-multi.ico",
    "uninstallerIcon": "public/icons/panorama-viewer-icon-multi.ico",
    "displayLanguageSelector": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/icons/panorama-viewer-icon.png",
    "category": "public.app-category.graphics-design",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
}
